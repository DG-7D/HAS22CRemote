{
  "name": "ha-s22c-remote",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "BUN_CONFIG_DNS_TIME_TO_LIVE_SECONDS=86400 bun --hot src/index.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "BUN_CONFIG_DNS_TIME_TO_LIVE_SECONDS=86400 NODE_ENV=production bun src/index.tsx"
  },
  "dependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
